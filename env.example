# Supabase (get these from https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key
NEXT_PUBLIC_SUPABASE_SECRET_KEY=your-secret-key

# Modulate Velma — get API key from the Modulate team at the event
# Endpoint is hardcoded: https://modulate-prototype-apis.com/api/velma-2-stt-batch
MODULATE_API_KEY=your-modulate-api-key

# Airia — webhook URL and API key for the self-improvement pipeline trigger
# Get both from the Airia Agent Studio webhook trigger node
AIRIA_WEBHOOK_URL=https://your-airia-webhook-url
AIRIA_API_KEY=your-airia-api-key
# Pause outbound Airia webhook calls (default is paused unless explicitly set to false)
AIRIA_PAUSED=true

# Number of new calls required before triggering an Airia improvement cycle
IMPROVEMENT_BATCH_SIZE=3

# Base URL of this Next.js app (used for internal fetch calls)
# Locally: http://localhost:3000  |  Tunneled: your ngrok URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
